{% extends 'common/layout.html.twig' %}

{% block content %}
<div class="page-header">
  <h1>Charity <small></small></h1>
</div>

<p>
  <a href="{{ path('charity_edit') }}" class="btn btn-primary">Add charity</a>
</p>

<div class="row">
  <div class="col-md-8">
    <table class="table table-bordered">
      <tbody>
        {% for charity in charities %}
          <tr>
            <td>
              <a href="{{ path('charity_edit', { charity : charity.id }) }}" class="btn btn-default btn-xs pull-right">Edit</a>
              {{ charity.name }}
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
</div>

{% endblock content %}
