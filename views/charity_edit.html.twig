{% extends 'common/layout.html.twig' %}

{% form_theme form 'common/form_horizontal.html.twig' %}

{% block content %}
<div class="page-header">
  <h1>Charity <small></small></h1>
</div>

<div class="row">
  <div class="col-md-9">
    {{ form_start(form, { attr: { class: 'charity-edit' } }) }}
      {{ form_errors(form) }}
      {{ form_row(form.name) }}
      <div class="form-group">
        <div class="col-md-6 col-md-offset-2">
          <a href="{{ path('charity_list') }}" class="btn btn-default">Cancel</a>
          <button type="submit" class="btn btn-primary">Update</button>
        </div>
      </div>
    {{ form_end(form) }}
  </div>
</div>
{% endblock content %}
