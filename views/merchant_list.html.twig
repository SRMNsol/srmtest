{% extends 'common/layout.html.twig' %}

{% block content %}
<div class="page-header">
  <h1>Merchants <small>Store Database</small></h1>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Found {{ merchants|length }} merchants</h3>
  </div>
  <div class="panel-body">
    Configure merchants and commissions
  </div>
  <!-- Table -->
  <table class="table">
    <thead>
      <tr>
        <th style="width: 50%;">Name</th>
        <th style="width: 10%;">Commission</th>
        <th style="width: 20%;">Type</th>
        <th></th>
      </tr>
    </thead>
    </tbody>
      {% for merchant in merchants %}
      <tr>
        <td>{{ merchant.name }}</td>
        <td>{{ merchant.cashbackText }}</td>
        <td>{{ merchant.commissionType|title }}</td>
        <td>
          <a href="{{ path('merchant_edit', { merchantId: merchant.id }) }}" class="btn btn-default btn-xs pull-right">Edit</a>
        </td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
</div>
{% endblock %}
