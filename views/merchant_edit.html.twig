{% extends 'common/layout.html.twig' %}

{% block content %}
<div class="page-header">
  <h1>Edit Merchant <small>{{ merchant.name }}</small></h1>
</div>

<div class="row">
  <div class="col-md-9">
    {{ form_start(form, { attr: { class: 'form-horizontal', role: 'form' } }) }}
      <div class="form-group">
        <label class="col-md-2 control-label">Store Name</label>
        <div class="col-md-6">
          <p class="form-control-static">{{ merchant.name }}</p>
        </div>
      </div>
      <div class="form-group">
        <label class="col-md-2 control-label">Cashback Rate</label>
        <div class="col-md-6">
          {{ form_widget(form.cashbackRate, { attr: { class: 'form-control' } }) }}
        </div>
      </div>
      <div class="form-group">
        <label class="col-md-2 control-label">Cashback Type</label>
        <div class="col-md-6">
          {{ form_widget(form.cashbackType, { attr: { class: 'form-control' } }) }}
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-6 col-md-offset-2">
          <button type="submit" class="btn btn-primary">Update</button>
        </div>
      </div>
    {{ form_end(form) }}
  </div>
</div>
{% endblock %}
