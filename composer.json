{
  "require": {
    "silex/silex": "~1.1",
    "twig/twig": "~1.14",
    "dflydev/doctrine-orm-service-provider": "~1.0",
    "igorw/config-service-provider": "~1.2",
    "twbs/bootstrap": "3.0.0",
    "monolog/monolog": "~1.6",
    "mheap/silex-assetic": "~1.0",
    "guzzle/guzzle": "~3.7",
    "zendframework/zend-cache": "~2.2",
    "leafo/lessphp": "0.4.0",
    "symfony/twig-bridge": "~2.3",
    "symfony/form": "~2.3",
    "symfony/yaml": "~2.3",
    "symfony/validator": "~2.3",
    "symfony/security": "~2.3",
    "symfony/translation": "~2.3",
    "symfony/config": "~2.3",
    "doblebjp/popshops-api": "dev-master#74fee96be5164174f1e27d1a75ce616535e4d153",
    "knplabs/console-service-provider": "dev-master",
    "doctrine/migrations": "v1.0-alpha1"
  },
  "require-dev": {
    "doctrine/data-fixtures": "~1.0",
    "symfony/browser-kit": "~2.3",
    "symfony/css-selector": "~2.3"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "repositories": [
    { "type": "vcs", "url": "https://github.com/doblebjp/popshops-api.git" },
    { "type": "vcs", "url": "https://github.com/doblebjp/easy-csv.git" }
  ],
  "scripts": {
    "post-install-cmd": [
      "App\\Setup\\WritePermissions::checkPaths",
      "php bin/console.php asset:dump",
      "vendor/bin/doctrine orm:generate-proxies",
      "php bin/console.php beesavy:fix:duplicate-user --no-ansi > data/log/fix_duplicate_user_`date +\"%Y%m%d%H%M%S\"`",
      "php bin/console.php beesavy:fix:user-cashback --no-ansi > data/log/fix_user_cashback_`date +\"%Y%m%d%H%M%S\"`"
    ],
    "post-update-cmd": [
      "App\\Setup\\WritePermissions::checkPaths",
      "php bin/console.php asset:dump",
      "vendor/bin/doctrine orm:generate-proxies"
    ]
  },
  "autoload": {
    "psr-0": {
      "App": "src/"
    }
  }
}
