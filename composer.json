{
  "require": {
    "silex/silex": "~1.1",
    "twig/twig": "~1.14",
    "dflydev/doctrine-orm-service-provider": "~1.0",
    "igorw/config-service-provider": "~1.2",
    "twbs/bootstrap": "3.0.0",
    "monolog/monolog": "~1.6",
    "mheap/silex-assetic": "~1.0",
    "guzzle/guzzle": "~3.7",
    "zendframework/zend-cache": "~2.2",
    "leafo/lessphp": "0.4.0",
    "symfony/twig-bridge": "~2.5",
    "symfony/form": "~2.5",
    "symfony/yaml": "~2.5",
    "symfony/validator": "~2.5",
    "symfony/security": "~2.5",
    "symfony/translation": "~2.5",
    "symfony/config": "~2.5",
    "doblebjp/popshops-api": "dev-master",
    "knplabs/console-service-provider": "dev-master",
    "doctrine/orm": "~2.4",
    "doctrine/migrations": "v1.0-alpha1",
    "saxulum/saxulum-doctrine-orm-manager-registry-provider": "2.1.0",
    "symfony/doctrine-bridge": "~2.5",
    "swiftmailer/swiftmailer": "~4.1.2"
  },
  "require-dev": {
    "doctrine/data-fixtures": "~1.0",
    "symfony/browser-kit": "~2.5",
    "symfony/css-selector": "~2.5",
    "phpunit/phpunit": "~4.4"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "repositories": [
    { "type": "vcs", "url": "git@github.com:doblebjp/popshops-api.git" },
    { "type": "vcs", "url": "git@github.com:doblebjp/easy-csv.git" }
  ],
  "scripts": {
    "post-install-cmd": [
      "App\\Setup\\WritePermissions::checkPaths",
      "php bin/console.php asset:dump",
      "php vendor/bin/doctrine migrations:migrate --no-interaction",
      "php vendor/bin/doctrine orm:generate-proxies",
      "php vendor/bin/doctrine orm:clear-cache:result"
    ],
    "post-update-cmd": [
      "App\\Setup\\WritePermissions::checkPaths",
      "php bin/console.php asset:dump",
      "php vendor/bin/doctrine orm:generate-proxies",
      "php vendor/bin/doctrine orm:clear-cache:result"
    ],
    "pre-autoload-dump": [
      "touch opsworks.php"
    ]
  },
  "autoload": {
    "psr-4": { "App\\": "src/App" },
    "classmap": ["opsworks.php"]
  }
}
